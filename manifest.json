{
  "manifest_version": 2,
  "name": "Material Markdown",
  "short_name": "Material Markdown",
  "description": "A simple and clean Material Design markdown editor with side by side preview",
  "version": "1.3.3",
  "minimum_chrome_version": "41",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png",
    "256": "assets/icon_256.png"
  },
  
  "offline_enabled": true,
  
  "commands": {
    "toggleOpenFile": {
      "suggested_key": {
        "default": "Ctrl+F"
      },
      "global": true,
      "description": "Open File"
    },
    "toggleSaveFile": {
      "suggested_key": {
        "default": "Ctrl+S"
      },
      "global": true,
      "description": "Save File"
    },
    "toggleSaveAsFile": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "global": true,
      "description": "Save As File"
    },
    "toggleOpenSample": {
      "suggested_key": {
        "default": "Ctrl+P"
      },
      "global": true,
      "description": "Open Sample Page"
    }
  },
  
 "permissions": [
    "storage",
    "clipboardWrite",
    "contextMenus",
    "webview",
    "system.network",
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "<all_urls>"
  ],
  
  "file_handlers": {
    "text": {
      "types": ["text/*"],
      "extensions": ["md","txt","readme"]
    }
  },

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  }
}
